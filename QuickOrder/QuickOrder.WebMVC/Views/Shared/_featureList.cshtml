@using QuickOrder.Entities.Entities.EntityFramework

@model List<services>
<section class="bg-skeen feature-list text-center home-icon wow fadeInDown" data-wow-duration="1000ms" data-wow-delay="300ms">
    <div class="icon-default icon-skeen">
        <img src="/content/staticImages/koltuk-takimi-icon.png" alt="" width="75" height="45">
    </div>
    <div class="container">
        <div class="build-title">
            <h2>Gelecekte Biz !</h2>
            <h6>Sizlere En Kaliteli Hizmeti Vermek İçin Buradayız. Daha da Kaliteli Hizmet Verebilmek İçin En İyisi Olacağız.</h6>
        </div>
        <div class="row">

            @foreach (services service in Model)
            {
                <div class="col-md-3 col-sm-6 col-xs-12">
                    <div class="feature-list-icon">
                        <div class="feature-icon-table">
                            <img src="@service.serviceIcon" alt="@service.serviceName" width="120" height="87">
                        </div>
                    </div>
                    <h5>@service.serviceName</h5>
                    <p>@service.serviceInfo</p>
                </div>
            }
        </div>
    </div>
</section>
