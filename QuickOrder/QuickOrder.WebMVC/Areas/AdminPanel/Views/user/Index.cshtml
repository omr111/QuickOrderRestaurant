@using QuickOrder.WebMVC.Areas.Models
@using QuickOrder.Entities.Entities.EntityFramework
@model usersAndRoles
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/AdminPanel/Views/Shared/_adminLayout.cshtml";
}
<div id="msg"></div>
<div class="content mt-3">
    <div class="animated fadeIn">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <strong class="card-title">Kullanıcı Listesi</strong>
                </div>
                <div class="card-body">
                    <div class="col-md-12" style="margin-top: 20px">
                        <div class="panel panel-success">
                            <div class="panel-heading">
                                   
                                <div class="pull-right">
                                    <span class="clickable filter" data-toggle="tooltip" title="Arama Yap" data-container="body">
                                        <i class="glyphicon glyphicon-filter"></i>
                                    </span>
                                </div>
                            </div>
                            <div class="panel-body">
                                <input type="text" class="form-control" id="task-table-filter" data-action="filter" data-filters="#task-table" placeholder="Search..." />
                            </div>
                            <table id="task-table" class="table table-striped table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <th>Kullanıcı Adı</th>
                                        <th>Ad</th>
                                        <th>Soyad</th>
                                        <th>Mail</th>
                                        <th>Kullanıcının Rolleri</th>
                                        <th>Rol Ata</th>
                                        <th>Engelli</th>
                                       
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (users user in Model.Users)
                                    {
                                        <tr>
                                            <td>@user.name</td>
                                            <td>@user.personelName</td>
                                            <td>@user.surname</td>
                                            <td>@user.email</td>
                                            <td>

                                                <select id="dropdown-@user.id" class="roles" name="rolName">
                                                    <option></option>
                                                    @foreach (roles rol in Model.Roles)
                                                    {
                                                        <option value="@rol.id">@rol.roleName</option>
                                                    }
                                                </select>
                                            </td>
                                            <td><a data-id="@user.id" class="btn btn-success giveRole"><i class="fa fa-sign-in"></i></a></td>
                                            <td>
                                                @if (user.isBlock)
                                                {
                                                    <a href="/AdminPanel/user/userBlock/@user.id" class="btn btn-danger" title="Engelli"><i class="fa fa-lock"></i></a>
                                                }
                                                else
                                                {
                                                    <a href="/AdminPanel/user/userBlock/@user.id " class="btn btn-success" title="Engelli Değil"><i class="fa fa-unlock"></i></a>
                                                }
                                            </td>
                                           
                                        </tr>

                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        </div>
    </div><!-- .animated -->
</div>
@section js{
    <script type="text/javascript">

        $(".giveRole").click(function() {
            var userId = $(this).data("id");
            const dropdown = $("#dropdown-"+userId).val();
          
      


            var ok = '<div class="col-sm-12">';
            ok += '<div class="alert  alert-success alert-dismissible fade show" role="alert">';
            ok += ' <span class="badge badge-pill badge-success">Success</span>Kullanıcı Rol Eklendi';
            ok += ' <button type="button" class="close" data-dismiss="alert" aria-label="Close">';
            ok += '<span aria-hidden="true">&times;</span>';
            ok += '</button>';
            ok += '</div>';
            ok += ' </div>';
            var okFail = '<div class="col-sm-12">';
            okFail += '<div class="alert  alert-danger alert-dismissible fade show" role="alert">';
            okFail += ' <span class="badge badge-pill badge-success">Error</span> Rol Ekleme Sırasında Bir Hata Meydana Geldi';
            okFail += ' <button type="button" class="close" data-dismiss="alert" aria-label="Close">';
            okFail += '<span aria-hidden="true">&times;</span>';
            okFail += '</button>';
            okFail += '</div>';
            okFail += ' </div>';


                $.ajax({
                    url: "/AdminPanel/roleOfUser/giveRole",
                    data: { userId: userId, roleId: dropdown },

                    type: "Post",

                    success:function(result) {
                        if (result == 1) {
                            $("#msg").append(ok);
                            setTimeout(function() { $('#msg').hide('slow'); }, 5000);
                        }
                        else {
                            $("#msg").append(okFail);
                            setTimeout(function () { $('#msg').hide('slow'); }, 5000);
                        }
                    },
                    error:function() {
                        $("#msg").append(okFail);
                        setTimeout(function () { $('#msg').hide('slow'); }, 5000);
                    }

            });

        });
    </script>
}